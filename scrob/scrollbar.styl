.ll-scrollbar {
  position: relative;
  overflow: hidden;
  display: flex;
  display: block\9;
  &:hover,&:active,&:focus {
    .ll-scrollbar__bar {
      opacity: 1;
    }
  }
}
.ll-scrollbar__view {
  flex-grow: 1;
  overflow: scroll;
}
.ll-scrollbar__bar {
  position: absolute;
  user-select: none;
  z-index: 1;
  opacity: 0;
  transition: opacity .2s ease-out;
  &.vertical {
    width: 8px;
    height: 100%;
    top: 0;
    right: 1px;
  }
  &.horizontal {
    width: 100%;
    height: 8px;
    left: 0;
    bottom: 1px;
    .ll-scrollbar__thumb {
      height: 100%;
      width: 0;
    }
  }
  .ll-scrollbar__thumb {
    user-select: none;
    cursor: pointer;
    background-color: #c1c1c1;
    border-radius: 4px;
    &:hover {
      background-color: #a8a8a8;
    }
  }
}